@using People.Data
@model MvcApplication32.Models.IndexViewModel
@if (Model.Message != null)
{
    <div class="alert alert-success">
        @Model.Message
    </div>
}
<a href="/home/addperson" class="btn btn-primary">Add Person</a>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Actions</th>
    </tr>
    @foreach (Person person in Model.People)
    {
        <tr>
            <td>@person.Id</td>
            <td>@person.FirstName</td>
            <td>@person.LastName</td>
            <td>@person.Age</td>
            <td>
                <a href="/home/editperson?personid=@person.Id" class="btn btn-warning">Edit</a>
                <a href="#" class="btn btn-danger delete" data-person-id="@person.Id">Delete</a>
            </td>
        </tr>
    }
</table>

@section scripts
{
    <script src="~/Scripts/index.js"></script>
}